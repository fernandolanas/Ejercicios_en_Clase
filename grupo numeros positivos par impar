/* 
Realizar un programa de un grupo de numeros positivos que verifica si es par o impar
*/

#include <stdio.h>

void main()
{
    int num1=1;
    int cont = 1;
    
    while(num1>0)
     {
         printf("Ingrese el numero:");
         scanf("%d",&num1);
         while(num1<0)
         {
          printf("Ingrese un numero positivo:");
          scanf("%d",&num1);
        }
        if(num1%2==0 && num1!=0)
            printf("Par\n");
        else if (num1%2==1 && num1!=0)
            printf("Impar\n");
     
        }
      
    
}

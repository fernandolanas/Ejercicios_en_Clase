/******************************************************************************

tabla de multiplicar for
*******************************************************************************/
#include <stdio.h>

void main()
{

int tabla;
int lim;
int mult = 0;
int i;
    printf("Ingrese la tabla:");
    scanf("%d",&tabla);
    printf("Ingrese el limite:");
    scanf("%d",&lim);
    
   for(i=1;i<=lim;i++)
    {
        mult = tabla*i;
        printf("%dx%d=%d\n",tabla,i,mult);
        
    } 
    
  
    
}

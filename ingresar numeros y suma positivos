/* 
Realizar un programa que permita ingresar un grupo de numeros y sume solo los positivos
*/

#include <stdio.h>

void main()
{
    int suma=0;
    int cont, numeros, numero;
    
    printf("Ingrese la cantidad de numeros que va a agrupar:");
         scanf("%d",&numeros);
         
    for(cont=1;cont<=numeros;cont++)
     {
         printf("Ingrese el numero %d:",numero);
         scanf("%d",&numero);
         if(numero>0)
         
          
          suma = suma + numero;
        }
        
        
     
        
        printf("La suma de los numeros es %d",suma);
      
    
}
